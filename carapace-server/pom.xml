        </dependency>
        <dependency>
            <groupId>software.amazon.awssdk</groupId>
            <artifactId>route53</artifactId>
            <version>${libs.awssdk}</version>
            <exclusions>
                <exclusion>
                    <groupId>io.netty</groupId>
